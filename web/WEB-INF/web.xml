<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>sr_empleado</servlet-name>
        <servlet-class>controlador.sr_empleado</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sr_puesto</servlet-name>
        <servlet-class>controlador.sr_puesto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sr_login</servlet-name>
        <servlet-class>controlador.sr_login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sr_venta</servlet-name>
        <servlet-class>controlador.sr_venta</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sr_empleado</servlet-name>
        <url-pattern>/sr_empleado</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sr_puesto</servlet-name>
        <url-pattern>/sr_puesto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sr_login</servlet-name>
        <url-pattern>/sr_login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sr_venta</servlet-name>
        <url-pattern>/sr_venta</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
